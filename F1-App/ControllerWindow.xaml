<Window x:Class="F1_App.ControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:F1_App"
        mc:Ignorable="d"
        Title="Control Window"
        Height="200"
        Width="300">
    <StackPanel>
        <Label Content="Session Key:" Margin="10"/>
        <TextBox x:Name="SessionKeyTextBox" Margin="10"/>
        <Button Content="Apply Session Key" Margin="10" Click="ApplySessionKeyButton_Click"/>
        <Button Content="Close Application" Margin="10" Click="CloseApplicationButton_Click"/>
    </StackPanel>
</Window>
